int max_element( vector<int> & piles )
    {
        int max=INT_MIN;
        for( int i=0 ; i< piles.size() ; i++)
        {
            if(max < piles[i] )
            {
                max=piles[i];
            }
        }

        return max;
    }

    int minEatingSpeed(vector<int>& piles, int h) 
    {
        
        int n= piles.size();
        int low=1;
        int high= max_element(piles);
       
        while( low <= high)
        {
            int mid= (low+high)/2;
            
            //mid is choosen as k here

            //now coco will eat k bananas
            double hr=0;
            for( int i=0 ; i< n ; i++)
            {
                hr = hr+ ceil ( double(piles[i]) /double(mid ) ) ;
            }

            if( hr > h)
            {
                // left half willl be eliminated
                low=mid+1;
            }

            else
            {
                // no. of hour koko took is less than h 
                // right half is eliminated

                high=mid-1;
            }
            
        }//while ends

        return low;
    }
